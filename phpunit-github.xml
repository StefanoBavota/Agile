<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>

    <testsuites>
        <testsuite name="default">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="DB_HOST" value="127.0.0.1" force="true" />
        <env name="DB_PORT" value="3306" force="true" />
        <env name="DB_USERNAME" value="root" force="true" />
        <env name="DB_DATABASE" value="test" force="true" />
        <env name="DB_PASSWORD" value="password" force="true" />
    </php>
</phpunit>